<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parentMenuDrawer.settings.TutorialContainerActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager_tutorial"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/line_tutorial"/>

    <View
        android:id="@+id/line_tutorial"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_above="@id/tutorial_btn_layout"/>

    <RelativeLayout
        android:id="@+id/tutorial_btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/skip_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SKIP"
            android:background="@null"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/indicator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="@android:color/black"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/indicator2"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/indicator3"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="30sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/indicator4"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:textSize="30sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/next_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:background="@null"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</RelativeLayout>