<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/colorWhiteBackground"
    android:orientation="vertical"
    android:padding="10dp">

    <EditText
        android:id="@+id/task_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Task Name" />

    <EditText
        android:id="@+id/task_person_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assing a person" />

    <EditText
        android:id="@+id/task_dueDate_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="MM/DD/YYYY"
        android:inputType="date" />

    <Switch
        android:id="@+id/photo_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Photo proof"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/approval_switch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approval required"
        android:textSize="18sp" />

    <!--<ImageButton
        android:id="@+id/add_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_baseline_add_circle_24" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_cancel_task_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel" />

        <Button
            android:id="@+id/dialog_save_task_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save" />

    </LinearLayout>

</LinearLayout>