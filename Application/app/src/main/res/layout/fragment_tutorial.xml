<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parentMenuDrawer.settings.TutorialFragment">

    <ImageView
        android:id="@+id/tutorial_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="86dp"
        android:layout_marginRight="86dp"
        android:layout_marginBottom="350dp"
        android:src="@drawable/chores_icon" />

    <TextView
        android:id="@+id/tutorial_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="287dp"
        android:text="@string/hello_blank_fragment"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/info_tutorial_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="406dp"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:text="TextView" />

</RelativeLayout>